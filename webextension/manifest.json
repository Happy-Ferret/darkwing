{
  "manifest_version": 2,
  "name": "darkwing ui",
  "description": "darkwing ui",
  "version": "1.0",

  "background": { "scripts": ["background.js"] },
  "browser_action": {
    "browser_style": false,
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "64": "icons/icon-64.png",
      "96": "icons/icon-96.png"
    },
    "default_title": "Test Pilot"
  },
  "permissions": [
    "storage",
    "https://testpilot.firefox.com/*"
  ]
}
